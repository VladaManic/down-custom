.container-custom {
	width: 1100px;
	margin: auto;
}


/* Video section */

#video-sec video{
	width: 100%;
}


/* Featured products section */

.featur-prods {
	padding-top: 30px;
	padding-bottom: 80px;
}

.featur-wrap {
	display: flex;
	justify-content: space-between;
}

.featur-wrap .prod-wrap {
	width: 180px;
}

.featur-wrap .img-wrap {
	width: 100%;
	height: 200px;
}

.featur-wrap .img-wrap img {
	width: 100%;
	height: 100%; 
	object-fit: cover;
}

.featur-wrap .prod-info {
	text-align: center;
}

.featur-wrap .prod-name {
	font-weight: 700;
}

.featur-wrap .choose-option {
	display: block;
	width: 100%;
	padding-top: 4px;
	padding-bottom: 4px;
	background-color: #4d4f4e;
	border-radius: 6%;
	text-decoration: none;
	color: white;
}


/* Featured collections section */

#featur-colls {
	padding-bottom: 50px;
}

#featur-colls .row {
	display: flex;
	justify-content: space-between;
}

#featur-colls .coll-wrap {
	width: 31%;
}

#featur-colls .featur-coll {
	width: 100%;
	height: 450px;
	object-fit: cover;
}

#featur-colls .coll-title {
	font-size: 22px;
	font-weight: 700;
	color: black;
}

#featur-colls .cta-coll {
	display: inline-block;
	padding: 4px 20px;
	background-color: #4d4f4e;
	border-radius: 6%;
	text-decoration: none;
	color: white;
}


/* Logos section */

#logo-sect {
	background-color: #4d4f4e;
}

#logo-sect .logos-wrap {
	display: flex;
	justify-content: space-around;
	flex-wrap: wrap;
	width: 900px;
	margin: auto;
	padding-top: 80px;
	padding-bottom: 30px;
}

#logo-sect .logo-inner {
	width: 25%;
	padding-bottom: 50px;
	text-align: center;
}

