.container-custom {
	width: 1100px;
	margin: auto;
}

/* Featured products section */

.featur-wrap {
	display: flex;
	justify-content: space-between;
}

.featur-wrap .prod-wrap {
	width: 180px;
}

.featur-wrap .img-wrap {
	width: 100%;
	height: 200px;
}

.featur-wrap .img-wrap img {
	width: 100%;
	height: 100%; 
	object-fit: cover;
}

.featur-wrap .prod-info {
	text-align: center;
}

.featur-wrap .prod-name {
	font-weight: 700;
}

.featur-wrap .choose-option {
	display: block;
	width: 100%;
	padding-top: 4px;
	padding-bottom: 4px;
	background-color: #4d4f4e;
	border-radius: 6%;
	text-decoration: none;
	color: white;
}


